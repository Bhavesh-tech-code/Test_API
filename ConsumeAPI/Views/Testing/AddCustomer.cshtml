@model Test_API.Models.Customer
@{
    ViewData["Title"] = "AddCustomer";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-dark p-4 rounded rounded-top">

            @if (Model.Id != 0)
            {
                <h1 class="text-center card-header text-warning m-1 p-2">Update Customer Detail's</h1>
            }
            else
            {
                <h1 class="text-center card-header text-info m-1 p-2">Add Customer Detail's</h1>

            }
            <form method="post" asp-action="AddCustomer">
                <div class="text-center text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <input type="hidden" asp-for="Id" />
                    <span class="alert-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <select class="form-control" asp-for="Gender">
                        <option value="0">--Select Gender--</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IsActive"></label>
                    <input type="checkbox" asp-for="IsActive" class="custom-chebox" />
                    <span class="text-danger" asp-validation-for="IsActive"></span>
                </div>

                <div class="form-group">
                    @if (Model.Id != 0)
                    {
                        <input type="submit" class="btn btn-sm btn-warning float-right mt-2 p-2" value="UPDATE" />

                    }
                    else
                    {
                        <input type="submit" class="btn btn-sm btn-primary float-right mt-2 p-2" value="SUBMIT" />

                    }
                </div>

            </form>
        </div>
    </div>
</div>

@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}




