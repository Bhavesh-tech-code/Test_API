@model IEnumerable<Test_API.Models.Customer>


@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <h1 class="text-info text-center p-1 border border-dark">Employees Detail's</h1>
            <a class="btn btn-sm btn-primary m-2 p-2 float-right" asp-action="AddCustomer" asp-controller="Testing">Add Customers</a>
            <table class="table table-bordered table-striped table-hover">

                <thead class="bg-dark text-light text-center">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Active</th>
                        <th>Operation</th>
                        <th>Something</th>

                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model.Count() > 0)
                    {
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.Id</td>
                                <td>@d.Name</td>
                                <td>@d.Gender</td>
                                <td>@d.IsActive</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Testing" asp-route-id="@d.Id">Edit</a>
                                    <a class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this')" asp-action="Delete" asp-controller="Testing" asp-route-id="@d.Id">Delete</a>
                                    <a class="btn btn-sm btn-warning" asp-action="" asp-controller="Testing" asp-route-id="@d.Id">Details</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td colspan="5"><h2 class="text-warning bg-info">No Record</h2></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

